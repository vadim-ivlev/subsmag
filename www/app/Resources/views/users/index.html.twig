{% extends 'base.html.twig' %}

{% block body %}
    <h1>Users list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Login</th>
                <th>Password</th>
                <th>Userkey</th>
                <th>Dateregistration</th>
                <th>Datelastlogin</th>
                <th>Flagcanrest</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('users_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                <td>{{ user.login }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.userKey }}</td>
                <td>{% if user.dateRegistration %}{{ user.dateRegistration|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if user.dateLastlogin %}{{ user.dateLastlogin|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if user.flagCanRest %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('users_show', { 'id': user.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('users_edit', { 'id': user.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('users_new') }}">Create a new user</a>
        </li>
    </ul>
{% endblock %}
