{% extends 'base.html.twig' %}

{% block body %}
    <h1>Zone</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ zone.id }}</td>
            </tr>
            <tr>
                <th>Zonenumber</th>
                <td>{{ zone.zoneNumber }}</td>
            </tr>
            <tr>
                <th>Tarifid</th>
                <td>{{ zone.tarifId }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('zones_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('zones_edit', { 'id': zone.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
