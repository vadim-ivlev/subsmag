{% extends 'base.html.twig' %}

{% block body %}
    <h1>Period</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ period.id }}</td>
            </tr>
            <tr>
                <th>Monthstart</th>
                <td>{{ period.monthStart }}</td>
            </tr>
            <tr>
                <th>Yearstart</th>
                <td>{{ period.yearStart }}</td>
            </tr>
            <tr>
                <th>Periodmonths</th>
                <td>{{ period.periodMonths }}</td>
            </tr>
            <tr>
                <th>Quantitymonthsstart</th>
                <td>{{ period.quantityMonthsStart }}</td>
            </tr>
            <tr>
                <th>Quantitymonthsend</th>
                <td>{{ period.quantityMonthsEnd }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('periods_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('periods_edit', { 'id': period.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
