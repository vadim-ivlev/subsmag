    </tr> -->    
    <tr>
        <td style="width:120mm; text-align:right; font-size: 14px;">{{ vendor.accountantTitle }}</td>
        <td style="width:60mm; text-align:center; font-size: 14px; border-bottom: 1px solid;"><img src="{{ vendor.accountantSignImg }}" style="/*width:[invoice_rg_accountant_width]mm/*130px*/; max-width: 60mm; max-height: 25mm;"></td>
        <td style="width:60mm; text-align:left; font-size: 14px;">{{ vendor.accountantName }}</td>
